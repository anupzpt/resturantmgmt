@model IEnumerable<DMS.DAL.DatabaseContext.cfg01configurations>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <!-- start: PAGE HEADER -->
    <!-- start: TOOLBAR -->
    <!---->
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>
                    Configuration
                    <small>List</small>
                </h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="toolbar-tools pull-right">
                <!-- start: TOP NAVIGATION MENU -->
                <ul class="nav navbar-right">
                    <li class="back">
                        <a href="@Url.Action("Edit")">
                            <i class="fa fa-edit">
                            </i> Edit
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    @Html.Raw(FlashBag.showMessage())
                    <div class="table-responsive col-md-12">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        SN
                                    </th>
                                    <th>
                                        Module Name
                                    </th>
                                    <th>
                                        Key Name
                                    </th>
                                    <th>
                                        Value
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int sn = 0; }
                                @foreach (var item in Model)
                                {
                                    sn++;
                                    <tr>
                                        <td>
                                            @sn
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cfg01module)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cfg01key)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cfg01value)
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>