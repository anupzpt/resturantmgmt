@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1 class="upper">Role Permission<small>List</small> </h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <a href="#" class="back-subviews">
                <i class="fa fa-chevron-left"></i> BACK
            </a>
            <a href="#" class="close-subviews">
                <i class="fa fa-times"></i> CLOSE
            </a>
            <div class="toolbar-tools pull-right">
                <!-- start: TOP NAVIGATION MENU -->
                <ul class="nav navbar-right">
                    <!-- start: TO-DO DROPDOWN -->
                    <li>
                        <a href="@Url.Action("Create")">
                            <i class="fa fa-plus"></i> Add new
                        </a>
                    </li>
                    <li>
                        <a href="#" class="cmdPrint">
                            <i class="fa fa-print"></i> Print
                        </a>
                    </li>
                    <li class="back">
                        <a href="@Url.Action("DashBoard","Home")">
                            <i class="fa fa-chevron-left"></i> Back
                        </a>
                    </li>
                </ul>
                <!-- end: TOP NAVIGATION MENU -->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- start: FORM VALIDATION 1 PANEL -->
            <div class="panel panel-white">


                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th colspan="2">
                                        Roles
                                    </th>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@role.Name  </strong>
                                        </td>
                                        <td><a class="btn-sm btn-green tooltips" href="@Url.Action("SetPermission", new { Emp_Type = role.Id})">Permission</a>|<a class="btn-sm btn-green tooltips" href="@Url.Action("UserList","RolePermission", new { id = role.Id})">User List</a></td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
