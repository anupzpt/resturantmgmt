@model IEnumerable<DMS.UI.ViewModels.ErrorLog.GlobalErrorLogVM>

@{
    ViewBag.Title = "Index";
}
<div class="">
    <!-- start: PAGE HEADER -->
    <!-- start: TOOLBAR -->
    <div class="toolbar row">
        <div class="col-sm-8 hidden-xs">
            <div class="page-header">
                <h1 class="col-sm-5">  Global Error Log </h1>
                <div class="col-sm-7">

                </div>
            </div>
        </div>
        <div class="col-sm-4 col-xs-12">

            <div class="toolbar-tools pull-right">
                <!-- start: TOP NAVIGATION MENU -->
                <ul class="nav navbar-right">
                    <!-- start: TO-DO DROPDOWN -->
                    <li>

                        @*<a href="@Url.Action("Edit")">
                                <i class="fa fa-pencil"></i> Edit
                            </a>*@

                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-chevron-left"></i> Back
                        </a>
                    </li>
                </ul>
                <!-- end: TOP NAVIGATION MENU -->
            </div>
        </div>
    </div>
    <!-- end: TOOLBAR -->
    <!-- end: PAGE HEADER -->
    <!-- start: BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        Dashboard
                    </a>
                </li>
                <li class="active">
                    Global Error Log
                </li>
                <li class="">
                    List
                </li>
            </ol>
        </div>
    </div>
    <!-- end: BREADCRUMB -->
    <!-- start: PAGE CONTENT -->

    <div class="row">
        <div class="col-md-12">
            <!-- start: FORM VALIDATION 1 PANEL -->
            <div class="panel panel-white">


                <div class="panel-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Message
                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTable">
                            <thead>
                                <tr>
                                    <th>SN</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EnglishDate)
                                    </th>
                                    <th>Time</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Controller)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Action)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Attribute)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientIpAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int sn = 0;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(++sn)</td>
                                        <td>
                                            @ViewHelper.GetDate(item.EnglishDate)
                                        </td>
                                        <td>
                                            @item.EnglishDate.ToString("hh: mm:ss tt")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Controller)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Action)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Attribute)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ClientIpAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ClientName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            <div class="visible-md visible-lg hidden-sm hidden-xs">
                                                <a class="btn btn-green tooltips" href="@Url.Action("Details", new { Id = item.Id })" data-original-title="View" data-placement="top"><i class="fa fa-eye"></i></a>
                                                <a class="btn btn-red tooltips" href="@Url.Action("Delete", new { Id = item.Id })" data-original-title="Solve" data-placement="top"><i class="fa fa-times fa fa-white"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end: FORM VALIDATION 1 PANEL -->
        </div>
    </div>
    <!-- end: PAGE CONTENT-->
</div>

